<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv_language_change_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:text="@string/main_language_change_title_text"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/layout_language_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/tv_language_change_check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_language_change_check_title_text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_language_change_check"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/main_language_change_check_text" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_language_change_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:text="@string/main_next_activity_button_text" />


</LinearLayout>